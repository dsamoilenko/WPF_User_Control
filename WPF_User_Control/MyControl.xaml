<UserControl x:Class="WPF_User_Control.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_User_Control"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Background="White">
        <TextBox  
         Margin = "26,10,26,0" Name = "txtBox" Height="23" VerticalAlignment="Top" />

        <Button Content = "Click Me"  
         Height = "23"  
         Margin = "26,38,0,0" Name = "button"  
         VerticalAlignment = "Top" Click = "button_Click" HorizontalAlignment="Left" Width="51" />
    </Grid>
</UserControl>
