<UserControl x:Class="WPF_User_Control.TestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Background="White">
        <Slider Value="{Binding Age, Mode=TwoWay}" x:Name="ageSlider" Margin="10,41,10,0" VerticalAlignment="Top" Minimum="0.0" Maximum="100.0"/>
        <Slider Value="{Binding Weight}" x:Name="weightSlider" Margin="10,118,10,0" VerticalAlignment="Top" Minimum="0" Maximum="100"/>
        <Label Content="Usual property" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Dependency property" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top"/>
        <TextBlock Margin="0,15,10,0" TextWrapping="Wrap" Text="{Binding Age}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="78"/>
        <TextBlock Margin="0,92,10,0" TextWrapping="Wrap" Text="{Binding Weight}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="78"/>

    </Grid>
</UserControl>
